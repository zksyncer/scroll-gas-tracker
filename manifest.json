{
  "manifest_version": 3,
  "name": "Scroll Gas Price Tracker",
  "description": "Track Scroll gas prices in real-time.",
  "version": "1.1",
  "icons": {
    "16": "ICON16.png",
    "48": "ICON48.png",
    "128": "ICON128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ICON16.png",
      "48": "ICON48.png",
      "128": "ICON128.png"
    }
  }
}
