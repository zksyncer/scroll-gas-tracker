{
  "manifest_version": 3,
  "name": "Scroll Gas Price Tracker",
  "version": "1.0.0",  // Set version number properly
  "description": "Tracks gas prices in real time.",
  "permissions": ["storage", "alarms"],
  "icons": {
    "16": "ICON16.png",
    "48": "ICON48.png",
    "128": "ICON128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ICON16.png",
      "48": "ICON48.png",
      "128": "ICON128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
