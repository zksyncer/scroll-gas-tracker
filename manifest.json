{
  "manifest_version": 3,
  "name": "Scroll Gas Price Tracker",
  "version": "1.0",
  "description": "Tracks Scroll L2 gas prices in real time",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.scrollscan.com/",
    "https://rpc.scroll.io/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'"
  },
  "icons": {
    "16": "ICON16.PNG",
    "48": "ICON48.PNG",
    "128": "ICON128.PNG"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ICON16.PNG",
      "48": "ICON48.PNG",
      "128": "ICON128.PNG"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["info.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
