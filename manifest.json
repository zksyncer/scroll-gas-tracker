{
  "manifest_version": 3,
  "name": "Scroll Gas Price Tracker",
  "version": "2.0",
  "description": "Tracks Scroll L2 gas prices in real time",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ICON16.PNG",
      "48": "ICON48.PNG",
      "128": "ICON128.PNG"
    }
  },
  "icons": {
    "16": "ICON16.PNG",
    "48": "ICON48.PNG",
    "128": "ICON128.PNG"
  }
}
