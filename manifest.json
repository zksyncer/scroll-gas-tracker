{
  "manifest_version": 3,
  "name": "Scroll Gas Price Tracker",
  "version": "1.0",
  "description": "Track gas prices on the Scroll network",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ICON16.PNG",
      "48": "ICON48.PNG",
      "128": "ICON128.PNG"
    }
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "ICON16.PNG",
    "48": "ICON48.PNG",
    "128": "ICON128.PNG"
  },
  "host_permissions": [
    "https://rpc.scroll.io/*"
  ]
}
