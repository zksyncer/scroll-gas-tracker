{
  "manifest_version": 3,
  "name": "Gas Price Fetcher",
  "description": "Fetches gas prices and stores them in local storage.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://alpha-rpc.scroll.io/*"
  ]
}
